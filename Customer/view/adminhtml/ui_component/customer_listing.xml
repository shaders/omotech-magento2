<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <action name="pw_sync">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to sync selected customers to Pushwoosh?</message>
                        <title translate="true">Sync</title>
                    </confirm>
                    <url path="pushwoosh_customer/Customer/MassSync"/>
                    <type>sync</type>
                    <label translate="true">Sync to Pushwoosh</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>

</listing>
